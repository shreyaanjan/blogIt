<%- include('./partials/start.ejs') %>
  <div class="container-fluid">
    <div class="blog-section">
      <div class="row g-4">
        <% blogs.map((blog)=> { %>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card blog-card h-100 border-0">
              <img src="/<%= blog.file %>" class="card-img-top" alt="<%= blog.name %>">
              <div class="card-body pb-0">
                <div class="d-flex flex-wrap gap-2 mb-2">
                  <% blog.tags.split(',').forEach(tag=> { %>
                    <span class="badge bg-primary">
                      <%= tag.trim() %>
                    </span>
                    <% }) %>
                </div>
                <h5 class="card-title mt-2">
                  <%= blog.name %>
                </h5>
                <p class="card-text text-muted blog-desc" data-full="<%= blog.desc %>">
                  <%= blog.desc.length> 120 ? blog.desc.slice(0,150) : blog.desc %>
                </p>
              </div>
              <div class="card-footer bg-transparent border-0 pt-0">
                <div class="d-flex justify-content-between align-items-center">
                  <button class="btn btn-sm btn-outline-primary read-toggle">
                    Read More
                  </button>
                  <div class="d-flex gap-2">
                    <a href="/admin/edit-blog/<%= blog._id %>" class="btn btn-sm btn-outline-warning">
                      Edit
                    </a>
                    <a href="/admin/delete-blog/<%= blog._id %>" class="btn btn-sm btn-outline-danger">
                      Delete
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
  <%- include('./partials/end.ejs') %>